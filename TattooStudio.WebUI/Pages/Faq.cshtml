@page
@model TattooStudio.WebUI.Pages.FaqModel
@{
    ViewData["Title"] = "Dúvidas Frequentes";
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="text-center mb-5">
            <h1 class="display-4">@ViewData["Title"]</h1>
            <p class="lead text-muted">Tudo o que você precisa saber antes de agendar sua tatuagem.</p>
        </div>

        <div class="accordion" id="faqAccordion">
            @for (int i = 0; i < Model.FaqItems.Count; i++)
            {
                var item = Model.FaqItems[i];
                var isFirst = i == 0;
                <div class="accordion-item">
                    <h2 class="accordion-header" id="heading-@item.Id">
                        <button class="accordion-button @(isFirst ? "" : "collapsed")" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@item.Id" aria-expanded="@isFirst.ToString().ToLower()" aria-controls="collapse-@item.Id">
                            @item.Question
                        </button>
                    </h2>
                    <div id="collapse-@item.Id" class="accordion-collapse collapse @(isFirst ? "show" : "")" aria-labelledby="heading-@item.Id" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            @item.Answer
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>