@page
@model TattooStudio.WebUI.Pages.Admin.Settings.IndexModel
@{
    ViewData["Title"] = "Gerenciar Agenda";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Status da Agenda Pública</h6>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="Settings.Id" />
                    <div class="form-check form-switch mb-3">
                        <input asp-for="Settings.IsAgendaOpen" type="checkbox" class="form-check-input" role="switch" id="agendaSwitch">
                        <label asp-for="Settings.IsAgendaOpen" class="form-check-label" for="agendaSwitch"></label>
                    </div>
                    <button type="submit" class="btn btn-success">Salvar Alterações</button>
                </form>
            </div>
        </div>
    </div>
</div>