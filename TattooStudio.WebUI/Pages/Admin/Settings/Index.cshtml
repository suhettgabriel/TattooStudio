@page
@model TattooStudio.WebUI.Pages.Admin.Settings.IndexModel
@{
    ViewData["Title"] = "Gerenciar Agenda e Termos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
</div>

<form method="post">
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card shadow h-100">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Gerenciar Agenda</h6>
                </div>
                <div class="card-body">
                    <input type="hidden" asp-for="Settings.Id" />
                    <div class="form-check form-switch mb-3">
                        <input asp-for="Settings.IsAgendaOpen" type="checkbox" class="form-check-input" role="switch" id="agendaSwitch">
                        <label asp-for="Settings.IsAgendaOpen" class="form-check-label" for="agendaSwitch"></label>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-4">
            <div class="card shadow h-100">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Termo de Consentimento</h6>
                </div>
                <div class="card-body">
                    <div class="form-check form-switch mb-3">
                        <input asp-for="Settings.IsConsentFormEnabled" type="checkbox" class="form-check-input" role="switch" id="consentSwitch">
                        <label asp-for="Settings.IsConsentFormEnabled" class="form-check-label" for="consentSwitch"></label>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Settings.ConsentFormText" class="form-label"></label>
                        <textarea asp-for="Settings.ConsentFormText" id="consentEditor" class="form-control" rows="10"></textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-2">
        <button type="submit" class="btn btn-success">Salvar Todas as Alterações</button>
    </div>
</form>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/lang/summernote-pt-BR.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs5.min.css" rel="stylesheet">
    <script>
        $(document).ready(function() {
            $('#consentEditor').summernote({
                placeholder: 'Digite o texto do termo de consentimento aqui...',
                tabsize: 2,
                height: 250,
                lang: 'pt-BR',
                toolbar: [
                    ['font', ['bold', 'underline', 'clear']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['view', ['codeview']]
                ]
            });
        });
    </script>
}