@page
@model TattooStudio.WebUI.Pages.Admin.Faq.IndexModel
@{
    ViewData["Title"] = "Gerenciar FAQ";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
</div>

<div class="row">
    <div class="col-lg-4 mb-4">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Adicionar Pergunta</h6>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="mb-3">
                        <label asp-for="NewFaqItem.Question" class="form-label"></label>
                        <input asp-for="NewFaqItem.Question" class="form-control" />
                        <span asp-validation-for="NewFaqItem.Question" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewFaqItem.Answer" class="form-label"></label>
                        <textarea asp-for="NewFaqItem.Answer" class="form-control" rows="8"></textarea>
                        <span asp-validation-for="NewFaqItem.Answer" class="text-danger"></span>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-success">Salvar Pergunta</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-8">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Perguntas Cadastradas</h6>
            </div>
            <div class="card-body">
                @foreach (var item in Model.FaqItems)
                {
                    <div class="mb-3">
                        <strong>@item.Question</strong>
                        <p>@item.Answer</p>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" class="d-inline delete-form">
                            <button type="submit" class="btn btn-sm btn-outline-danger">Excluir</button>
                        </form>
                    </div>
                    <hr />
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.delete-form').forEach(form => {
            form.addEventListener('submit', function(event) {
                event.preventDefault();
                Swal.fire({
                    title: 'Você tem certeza?',
                    text: "Esta pergunta será removida permanentemente.",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Sim, excluir!',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit();
                    }
                });
            });
        });
    </script>
}