@page
@model TattooStudio.WebUI.Pages.Admin.WaitingList.IndexModel
@{
    ViewData["Title"] = "Gerenciar Lista de Espera";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
</div>

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Data</th>
                        <th>Nome</th>
                        <th>Contato</th>
                        <th>Ideia Resumida</th>
                        <th class="text-end">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Entries.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center">Nenhuma inscrição na lista de espera.</td>
                        </tr>
                    }
                    @foreach (var entry in Model.Entries)
                    {
                        <tr>
                            <td>@entry.SubmissionDate.ToString("dd/MM/yyyy")</td>
                            <td>@entry.User?.FullName</td>
                            <td>@entry.User?.Email <br> @entry.User?.PhoneNumber</td>
                            <td class="text-truncate" style="max-width: 300px;">
                                @entry.GetAnswerByLabel("O que gostaria de tatuar?")
                            </td>
                            <td class="text-end">
                                <div class="btn-group" role="group">
                                    <form method="post" asp-page-handler="ConvertToRequest" asp-route-id="@entry.Id" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-success">Converter em Solicitação</button>
                                    </form>
                                    <a asp-page="/Admin/Requests/Details" asp-route-id="@entry.Id" class="btn btn-sm btn-outline-secondary">Detalhes</a>
                                    <form method="post" asp-page-handler="Decline" asp-route-id="@entry.Id" class="d-inline decline-form">
                                        <button type="submit" class="btn btn-sm btn-danger">Recusar</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.decline-form').forEach(form => {
            form.addEventListener('submit', function(event) {
                event.preventDefault();
                Swal.fire({
                    title: 'Você tem certeza?',
                    text: "A inscrição será movida para a coluna de Recusados no Kanban.",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Sim, recusar!',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit();
                    }
                });
            });
        });
    </script>
}