@page
@model TattooStudio.WebUI.Pages.Admin.Gallery.IndexModel
@{
    ViewData["Title"] = "Gerenciar Galeria da Página Inicial";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
</div>

<div class="row">
    <div class="col-lg-4 mb-4">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Adicionar Nova Imagem</h6>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data" asp-page-handler="Upload">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="mb-3">
                        <label asp-for="UploadedImage" class="form-label">Arquivo de Imagem</label>
                        <input asp-for="UploadedImage" type="file" class="form-control" accept="image/*" required />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <input asp-for="Description" class="form-control" placeholder="Legenda opcional..." />
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-success">Enviar Imagem</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-8">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Imagens Atuais na Galeria</h6>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    @if (!Model.Images.Any())
                    {
                        <p class="text-center text-muted">Nenhuma imagem na galeria ainda.</p>
                    }
                    @foreach (var image in Model.Images)
                    {
                        <div class="col-md-6 col-lg-4">
                            <div class="card">                                
                                <img src="~/@image.ImageUrl" class="card-img-top" style="height: 150px; object-fit: cover;" alt="@image.Description">
                                <div class="card-body p-2">
                                    <p class="card-text small text-truncate">@image.Description</p>
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@image.Id" class="d-inline delete-form">
                                        <button type="submit" class="btn btn-sm btn-outline-danger w-100">Excluir</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.delete-form').forEach(form => {
            form.addEventListener('submit', function(event) {
                event.preventDefault();
                Swal.fire({
                    title: 'Você tem certeza?',
                    text: "Esta imagem será removida permanentemente!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Sim, excluir!',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit();
                    }
                });
            });
        });
    </script>
}