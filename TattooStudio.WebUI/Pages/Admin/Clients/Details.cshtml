@page "{id:int}"
@model TattooStudio.WebUI.Pages.Admin.Clients.DetailsModel
@using TattooStudio.WebUI.Helpers
@{
    ViewData["Title"] = "Histórico do Cliente";
}

@if (Model.Client != null)
{
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
        <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
        <a asp-page="./Index" class="btn btn-secondary">Voltar para a Lista</a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">@Model.Client.FullName</h6>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">E-mail</dt>
                <dd class="col-sm-9">@Model.Client.Email</dd>
                <dt class="col-sm-3">WhatsApp</dt>
                <dd class="col-sm-9">@Model.Client.PhoneNumber</dd>
                @if (!string.IsNullOrEmpty(Model.Client.InstagramHandle))
                {
                    <dt class="col-sm-3">Instagram</dt>
                    <dd class="col-sm-9">@Model.Client.InstagramHandle</dd>
                }
            </dl>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Histórico de Solicitações</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Data</th>
                            <th>Estúdio</th>
                            <th>Status</th>
                            <th class="text-end">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var request in Model.Client.TattooRequests.OrderByDescending(r => r.SubmissionDate))
                        {
                            <tr>
                                <td>@request.SubmissionDate.ToString("dd/MM/yyyy")</td>
                                <td>@request.Studio?.City</td>
                                <td>
                                    <span class="badge text-white" style="background-color: @(EnumHelpers.GetStatusColor(request.Status))">
                                        @EnumHelpers.GetDisplayName(request.Status)
                                    </span>
                                </td>
                                <td class="text-end">
                                    <a asp-page="/Admin/Requests/Details" asp-route-id="@request.Id" class="btn btn-sm btn-outline-info">Ver Solicitação</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">Cliente não encontrado.</div>
}