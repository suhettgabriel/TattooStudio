@page
@model TattooStudio.WebUI.Pages.Admin.EmailTemplates.IndexModel
@using TattooStudio.WebUI.Helpers
@{
    ViewData["Title"] = "Templates de E-mail";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
</div>

<div class="card shadow">
    <div class="card-body">
        <p class="text-muted">Clique em um template para editar seu conteúdo. As alterações serão salvas automaticamente para futuros envios.</p>
        <div class="list-group">
            @foreach (var template in Model.Templates.OrderBy(t => t.Type))
            {
                <a asp-page="./Edit" asp-route-type="@template.Type" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">@template.Type.GetDisplayName()</h5>
                    </div>
                    <p class="mb-1 text-truncate">Assunto: @template.Subject</p>
                </a>
            }
        </div>
    </div>
</div>