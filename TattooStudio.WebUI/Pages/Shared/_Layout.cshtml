<!DOCTYPE html>
<html lang="pt-br" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tattoo Studio</title>

    <link rel="stylesheet" href="https://bootswatch.com/5/sandstone/bootstrap.min.css" id="light-theme" />
    <link rel="stylesheet" href="https://bootswatch.com/5/cyborg/bootstrap.min.css" id="dark-theme" disabled />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Tattoo Studio</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Admin/Dashboard/Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Admin/Requests/Index">Solicitações</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Admin/Clients/Index">Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Admin/WaitingList/Index">Lista de Espera</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Admin/Calendar/Index">Calendário</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Configurações</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-page="/Admin/Settings/Index">Gerenciar Agenda</a>
                                <a class="dropdown-item" asp-page="/Admin/EmailTemplates/Index">Templates de E-mail</a>
                                <a class="dropdown-item" asp-page="/Admin/FormFields/Index">Gerenciar Formulário</a>
                                <a class="dropdown-item" asp-page="/Admin/Gallery/Index">Gerenciar Galeria</a>
                                <a class="dropdown-item" asp-page="/Admin/Pricing/Index">Parametrização de Preços</a>
                                <a class="dropdown-item" asp-page="/Admin/Studios/Index">Estúdios</a>
                            </div>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto d-flex flex-row align-items-center gap-2">
                        <li class="nav-item">
                            <a class="nav-link" href="https://www.instagram.com" target="_blank" title="Instagram"><i class="bi bi-instagram fs-5"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="https://www.twitter.com" target="_blank" title="X (Twitter)"><i class="bi bi-twitter-x fs-5"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="https://www.youtube.com" target="_blank" title="YouTube"><i class="bi bi-youtube fs-5"></i></a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="theme-dropdown-toggler" role="button" data-bs-toggle="dropdown" aria-expanded="false" title="Alternar Tema">
                                <i class="bi bi-circle-half fs-5"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="theme-dropdown-toggler">
                                <li><a class="dropdown-item" href="#" data-theme-value="light"><i class="bi bi-sun-fill me-2"></i> Light</a></li>
                                <li><a class="dropdown-item" href="#" data-theme-value="dark"><i class="bi bi-moon-stars-fill me-2"></i> Dark</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid flex-grow-1">
        <main role="main" class="pb-3 pt-4">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-primary text-white mt-auto py-3">
        <div class="container text-center">
            <a class="text-white mx-2" asp-page="/Faq">FAQ</a> |
            &copy; @DateTime.Now.Year - Tattoo Studio Manager
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://unpkg.com/imask"></script>
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/index.global.min.js'></script>
    <script src="https://cdn.jsdelivr.net/npm/bs5-lightbox@1.8.3/dist/index.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        (function () {
            'use strict';

            const lightTheme = document.getElementById('light-theme');
            const darkTheme = document.getElementById('dark-theme');
            const htmlEl = document.documentElement;

            const applyTheme = (theme) => {
                if (theme === 'dark') {
                    htmlEl.setAttribute('data-bs-theme', 'dark');
                    lightTheme.disabled = true;
                    darkTheme.disabled = false;
                } else {
                    htmlEl.setAttribute('data-bs-theme', 'light');
                    lightTheme.disabled = false;
                    darkTheme.disabled = true;
                }
            };

            const savedTheme = localStorage.getItem('theme');
            if (savedTheme) {
                applyTheme(savedTheme);
            }

            document.querySelectorAll('[data-theme-value]').forEach(toggler => {
                toggler.addEventListener('click', (e) => {
                    e.preventDefault();
                    const newTheme = toggler.getAttribute('data-theme-value');
                    localStorage.setItem('theme', newTheme);
                    applyTheme(newTheme);
                });
            });
        })();
    </script>

    @if (TempData["SuccessMessage"] != null)
    {
        <script type="text/javascript">
            toastr.options.progressBar = true;
            toastr.options.closeButton = true;
            toastr.success('@Html.Raw(TempData["SuccessMessage"])');
        </script>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <script type="text/javascript">
            toastr.options.progressBar = true;
            toastr.options.closeButton = true;
            toastr.error('@Html.Raw(TempData["ErrorMessage"])');
        </script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>