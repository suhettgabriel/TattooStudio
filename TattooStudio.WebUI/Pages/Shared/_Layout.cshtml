<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tattoo Studio</title>

    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    @RenderSection("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Home</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Admin/Dashboard/Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Admin/Requests/Index">Solicitações</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Admin/Clients/Index">Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Admin/Calendar/Index">Calendário</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Admin/Studios/Index">Estúdios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Admin/Pricing/Index">Preços</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Admin/FormFields/Index">Gerenciar Formulário</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Admin/Settings/Index">Configurações</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid flex-grow-1">
        <main role="main" class="pb-3 pt-4">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-primary text-white mt-auto py-3">
        <div class="container text-center">
            &copy; @DateTime.Now.Year - Tattoo Studio Manager
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://unpkg.com/imask"></script>
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/index.global.min.js'></script>
    <script src="https://cdn.jsdelivr.net/npm/bs5-lightbox@1.8.3/dist/index.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Script para carrossel com múltiplos itens
        const multipleItemCarousel = document.querySelector('#tattooCarousel');
        if (window.matchMedia("(min-width:768px)").matches && multipleItemCarousel) {
            const carousel = new bootstrap.Carousel(multipleItemCarousel, {
                interval: false,
                wrap: false
            });

            var carouselWidth = multipleItemCarousel.querySelector('.carousel-inner').scrollWidth;
            var cardWidth = multipleItemCarousel.querySelector('.carousel-item').offsetWidth;
            var scrollPosition = 0;

            multipleItemCarousel.querySelector('.carousel-control-next').addEventListener('click', function () {
                if (scrollPosition < (carouselWidth - (cardWidth * 3))) {
                    scrollPosition += cardWidth;
                    multipleItemCarousel.querySelector('.carousel-inner').scroll({ left: scrollPosition, behavior: 'smooth' });
                }
            });

            multipleItemCarousel.querySelector('.carousel-control-prev').addEventListener('click', function () {
                if (scrollPosition > 0) {
                    scrollPosition -= cardWidth;
                    multipleItemCarousel.querySelector('.carousel-inner').scroll({ left: scrollPosition, behavior: 'smooth' });
                }
            });
        } else if (multipleItemCarousel) {
            new bootstrap.Carousel(multipleItemCarousel);
        }
    </script>

    @if (TempData["SuccessMessage"] != null)
    {
        <script type="text/javascript">
            toastr.options.progressBar = true;
            toastr.options.closeButton = true;
            toastr.success('@Html.Raw(TempData["SuccessMessage"])');
        </script>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <script type="text/javascript">
            toastr.options.progressBar = true;
            toastr.options.closeButton = true;
            toastr.error('@Html.Raw(TempData["ErrorMessage"])');
        </script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>